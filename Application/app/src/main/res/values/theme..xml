<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">#121212</item> <!-- Dark gray for dark mode -->
        <item name="colorPrimaryVariant">#1F1F1F</item> <!-- Darker gray -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text -->

        <!-- Secondary Colors -->
        <item name="colorSecondary">#BB86FC</item> <!-- Accent color (purple tone) -->
        <item name="colorSecondaryVariant">#3700B3</item>
        <item name="colorOnSecondary">#FFFFFF</item> <!-- White text -->

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize button style -->
        <item name="buttonStyle">@style/CustomButtonStyleNight</item>
    </style>

    <!-- Custom button style definition (Night Mode) -->
    <style name="CustomButtonStyleNight" parent="Widget.MaterialComponents.Button">
        <item name="android:background">#333333</item> <!-- Dark gray background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textSize">15sp</item> <!-- Button text size -->
    </style>
</resources>
